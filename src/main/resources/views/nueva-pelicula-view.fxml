<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.retoconjunto_javafx_hibernate.controllers.NuevaPeliculaController">

    <Label layoutX="50.0" layoutY="50.0" text="Título:">
      <font>
         <Font size="14.0" />
      </font></Label>
    <TextField fx:id="txtTitulo" layoutX="150.0" layoutY="50.0" prefWidth="200.0" style="-fx-background-color: #dae8e0;" />

    <Label layoutX="50.0" layoutY="100.0" text="Director:">
      <font>
         <Font size="14.0" />
      </font></Label>
    <TextField fx:id="txtDirector" layoutX="150.0" layoutY="100.0" prefWidth="200.0" style="-fx-background-color: #dae8e0;" />

    <Label layoutX="50.0" layoutY="150.0" text="Género:">
      <font>
         <Font size="14.0" />
      </font></Label>
    <TextField fx:id="txtGenero" layoutX="150.0" layoutY="150.0" prefWidth="200.0" style="-fx-background-color: #dae8e0;" />

    <Label layoutX="50.0" layoutY="200.0" text="Año:">
      <font>
         <Font size="14.0" />
      </font></Label>
    <TextField fx:id="txtAno" layoutX="150.0" layoutY="200.0" prefWidth="200.0" style="-fx-background-color: #dae8e0;" />

    <Label layoutX="50.0" layoutY="250.0" text="Descripción:">
      <font>
         <Font size="14.0" />
      </font></Label>
    <TextField fx:id="txtDescripcion" layoutX="150.0" layoutY="250.0" prefWidth="200.0" style="-fx-background-color: #dae8e0;" />

    <Button fx:id="btnGuardar" layoutX="150.0" layoutY="300.0" onAction="#guardarPelicula" style="-fx-background-color: #dae8e0; -fx-border-color: black;" text="Guardar">
      <font>
         <Font size="14.0" />
      </font></Button>
    <Button fx:id="btnCancelar" layoutX="250.0" layoutY="300.0" onAction="#cancelar" style="-fx-background-color: #dae8e0; -fx-border-color: black;" text="Cancelar">
      <font>
         <Font size="14.0" />
      </font></Button>

</AnchorPane>
